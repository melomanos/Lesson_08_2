<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidfilippov">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".CalcActivity"
            android:label="@string/title_activity_calc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppBar"
            android:label="@string/title_activity_app_bar">
        </activity>
        <activity
            android:name=".SharedPreferencesNotesActivity"
            android:label="@string/title_activity_shared_preferences_notes">
        </activity>
        <activity
            android:name=".CalendarViewActivity"
            android:label="@string/title_activity_calendar_view">
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/title_activity_spinner">
        </activity>
        <activity
            android:name=".CheckBoxActivity"
            android:label="@string/title_activity_check_box">
        </activity>
        <activity
            android:name=".EndlessTransition"
            android:label="@string/title_activity_endless_transition">
        </activity>
        <activity
            android:name=".EntryForm"
            android:label="@string/title_activity_entry_form">
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".FirstActivity"
            android:label="@string/title_activity_first">
        </activity>
    </application>

</manifest>